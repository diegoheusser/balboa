<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="5sp">


    <ImageButton
        android:id="@+id/row_control_button_action"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/upload"
        android:background="#ffffff"/>

    <LinearLayout
        android:id="@+id/row_control_linear_layout_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_control_text_view_description"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/row_control_text_view_localization"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_control_text_view_week"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:textSize="15sp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/row_control_text_view_month"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:textSize="15sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
